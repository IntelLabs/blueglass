[project]
name="blueglass"
version="0.1.0"
description="Framework for concept-grounded interpretability of vision-language models."

[build-system]
requires = ["python==3.11"]
build-backend="setuptools.build_meta"

[tool.setuptools]
ext-modules = [
    {name="package_name", "sources"=["list/of/paths"], build_ext}
]

[tool.pytest.ini_options]
minversion="6.0"
addopts = ["--import-mode=importlib"]
testpaths = [
    "tests"
]






